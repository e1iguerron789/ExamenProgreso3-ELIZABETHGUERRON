<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ExamenProgreso3_ELIZABETHGUERRON.BuscarPeliculasPage"
             Title="Buscar Película">
    <StackLayout Padding="20" Spacing="15">
    
        <Label Text="Buscar Película" FontSize="24" HorizontalOptions="Center" />

       
        <Entry x:Name="criterioBusquedaEntry" Placeholder="Ingrese el título de la película" />

        
        <Button Text="Buscar Película" Clicked="OnBuscarClicked" />

        <Label x:Name="resultadoLabel" FontSize="18" TextColor="Black" HorizontalOptions="Center" 
               VerticalOptions="Center" Text="Resultado aparecerá aquí..." />

    </StackLayout>
</ContentPage>
